.signin
  .ui.attached.message
    .header
      Sign In
    %p To log in please fill form with your email and password.
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "ui form attached segment"}) do |f|
    = render 'layouts/messages'
    .field
      %label= f.label :email
      .ui.left.labeled.icon.input
        = f.email_field :email, :autofocus => true, :placeholder => "Email"
        %i.mail.icon
        .ui.corner.label
          %i.icon.asterisk
    .field
      %label= f.label :password
      .ui.left.labeled.icon.input
        = f.password_field :password
        %i.lock.icon
        .ui.corner.label
          %i.icon.asterisk
    - if devise_mapping.rememberable?
      .inline.field
        .ui.checkbox
          = f.check_box :remember_me
          %label{:for => "user_remember_me"}
        %label= f.label :remember_me
    %div= f.submit "Sign in", :class => "ui blue submit button"
  .ui.bottom.attached.info.message
    = render "devise/shared/links"
