<div class="signup">
<div class="ui attached message">
	<div class="header">
	    Sign Up
	</div>
	<p>Please fill the form to Sign Up.</p>
	<%= devise_error_messages! %>
</div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "ui form attached segment"}) do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, :autofocus => true, :placeholder => "Name" %>
	</div>
	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email, :placeholder => "Email" %>
	</div>
	<div class="field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<div>
		<%= f.submit "Sign Up", :class => "ui blue submit button" %>
	</div>
<% end %>
<div class="ui bottom attached info message">
  <%= render "devise/shared/links" %>
</div>
</div>