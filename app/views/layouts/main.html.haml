!!!
%html
  %head
    / standard meta
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? "Panpan / " + yield(:title) : "Panpan"
    %meta{:content => content_for?(:description) ? yield(:description) : "", :name => "description"}/
    %link.ui{:href => "/css/panpan.css", :rel => "stylesheet", :type => "text/css"}/
    %link.ui{:href => "/css/semantic.min.css", :rel => "stylesheet", :type => "text/css"}/
    %link.ui{:href => "/fonts/sketchy.icons.css", :rel => "stylesheet", :type => "text/css"}/
    / link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %script{:src => "/javascript/library/history.js"}
    %script{:src => "/javascript/library/easing.js"}
    %script{:src => "/javascript/library/ace/ace.js"}
    %script{:src => "/javascript/library/waypoints.js"}
    %script{:src => "/javascript/semantic.min.js"}
    %script{:src => "/javascript/panpan.js"}
    = csrf_meta_tags
    = yield(:head)
  %body#panpan
    = render 'layouts/navigation'
    .segment
      = yield
